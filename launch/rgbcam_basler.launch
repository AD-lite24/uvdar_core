<launch>
  <arg name="uav_name" default="$(env UAV_NAME)"/>
  <arg name="mrs_id" default="$(env MRS_ID)"/>

  <arg name="standalone" default="false"/>

  <arg unless="$(arg standalone)" name="nodelet" value="load"/>
  <arg     if="$(arg standalone)" name="nodelet" value="standalone"/>
  <arg unless="$(arg standalone)" name="nodelet_manager" value="$(arg uav_name)_rgbcam_nodelet_manager"/>
  <arg     if="$(arg standalone)" name="nodelet_manager" value=""/>


  <arg name="debug" default="false"/>

  <!-- Basler camera settings: -->

  <arg name="BASLER_RGB_ID" default="$(env BASLER_RGB)" />


  <arg name="camera_name_rgb" default="basler_rgb" />
  <arg name="FRAME_RATE" default="59.0" />

  <arg name="camera_config_file" default="$(find uvdar_core)/config/camera_config/basler_rgb.yaml" />

  <node
    name="uvcam_rgb_tf_$(arg uav_name)"
    pkg="tf2_ros"
    type="static_transform_publisher"
    args="0.03  0.10 0.085 -0.3490658504 0.0 -1.57079632679 $(arg uav_name)/fcu $(arg uav_name)/rgbcam"/>

  <group ns="$(arg uav_name)">

      <arg name="respawn" default="false" />
      <arg name="enable_status_publisher" default="true" />
      <arg name="nodelet_rgb" value="pylon_camera/PylonCameraNodelet" />
      <arg name="startup_user_set" default="CurrentSetting" />
      <arg name="nodelet_load_rgb" value="load $(arg nodelet_rgb) $(arg nodelet_manager)"/>

  
    <!-- <node pkg="nodelet" type="nodelet" name="$(arg nodelet_manager)" args="manager" output="screen" launch-prefix="debug_roslaunch"> -->
    <node pkg="nodelet" type="nodelet" name="$(arg nodelet_manager)" args="manager" output="screen">
      <param name="num_worker_threads" value="10" />
    </node>


      <node pkg="nodelet" type="nodelet" name="$(arg camera_name_rgb)" args="$(arg nodelet_load_rgb)" output="screen" launch-prefix="bash -c 'sleep 5; $0 $@'; " respawn="$(arg respawn)" >
        <rosparam command="load" file="$(arg camera_config_file)" />
        <param name="camera_frame" value="$(arg uav_name)/$(arg camera_name_rgb)_optical"/>
        <param name="frame_rate" type="double" value="60"/>
        <param name="device_serial_number" type="string" value="$(arg BASLER_RGB_ID)"/>
        <param name="startup_user_set" value="$(arg startup_user_set)"/>
        <param name="enable_status_publisher" value="$(arg enable_status_publisher)"/>
        <param name="enable_current_params_publisher" value="false"/>

      </node>





  </group>


</launch>
